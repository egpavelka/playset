<% provide(:title, "submit track") %>
<section class="content-container static-pages">
  <div class="page-header">submit track</div>
    <%= form_for(@track_submission, as: :track_submission, html: { multipart: true }, url: validate_current_track_submission_path)  do |f| %>

      <%= render 'shared/error_messages', object: f.object %>

      <%= hidden_field_tag :current_step, 'add_metadata' %>

      <%= f.select :kind, TrackSubmission::KINDS %>

      <li class="form-entry">
        <%= f.label :title %>
        <%= f.text_field :title, class: 'response-data' %>
      </li>
      <li class="form-entry">
        <%= f.label :artist %>
        <%= f.text_field :artist, class: 'response-data' %>
      </li>
      <li class="form-entry">
        <%= f.label :album %>
        <%= f.text_field :album, class: 'response-data' %>
      </li>
      <li class="form-entry">
        <%= f.label :year %>
        <%= f.number_field :year, class: 'response-data' %>
      </li>
      <li class="form-entry">
        <%= f.label :album_art %>
        <%= f.file_field :album_art, class: 'response-data' %>
      </li>

      <%= f.submit 'Submit', class: 'submit-button' %>

    <% end %>
</section>

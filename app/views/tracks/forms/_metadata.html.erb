<%= form_for(@track, url: submit_path)  do |f| %>

  <%= render 'shared/error_messages', object: f.object %>

  <%= f.hidden_field :kind, value: 'Upload' %>

  <li class="form-entry">
    <%= f.label :title %>
    <%= f.text_field :title, class: 'response-data' %>
  </li>
  <li class="form-entry">
    <%= f.label :artist %>
    <%= f.text_field :artist, class: 'response-data' %>
  </li>
  <li class="form-entry">
    <%= f.label :album %>
    <%= f.text_field :album, class: 'response-data' %>
  </li>
  <li class="form-entry">
    <%= f.label :year %>
    <%= f.number_field :year, class: 'response-data' %>
  </li>
  <li class="form-entry">
    <%= f.label :album_art %>
    <%= f.file_field :album_art, class: 'response-data' %>
  </li>

  <%= f.submit 'Submit', class: 'submit-button' %>

<% end %>

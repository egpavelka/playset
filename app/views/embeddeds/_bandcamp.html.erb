<% if viewport_is_small %>
  <iframe style="border: 0; width: 100%; height: 42px;" src="https://bandcamp.com/EmbeddedPlayer/
  album={#album_id}/
  size=small/
  bgcol=ffffff/
  linkcol=0687f5/
  track={#track_id}/
  transparent=true/" seamless>
    <a href="http://{#artist_path}.bandcamp.com/track/{#title_path}">
      <%= title %> by <%= artist %>
    </a>
  </iframe>
<% else %>
  <iframe style="border: 0; width: 100%; height: 42px;" src="https://bandcamp.com/EmbeddedPlayer/
  album={#album_id}/
  size=large/
  bgcol=ffffff/
  linkcol=0687f5/
  minimal=true
  track={#track_id}/
  transparent=true/" seamless>
    <a href="http://{#artist_path}.bandcamp.com/track/{#title_path}">
      <%= title %> by <%= artist %>
    </a>
  </iframe>
<% end %>

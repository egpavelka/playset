<iframe src="https://embed.spotify.com/?uri=spotify%3Atrack%3A
{#track_id}
&theme=white"
width="300" height="80" frameborder="0" allowtransparency="true"></iframe>
<% else %>
  <iframe src="https://embed.spotify.com/?uri=spotify%3Atrack%3A
  {#track_id}
  &theme=white"
  width="300" height="380" frameborder="0" allowtransparency="true"></iframe>
<% end %>

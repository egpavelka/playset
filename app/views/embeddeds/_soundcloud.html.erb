<% if viewport_is_small %>
  <iframe width="100%" height="166" scrolling="no" frameborder="no"
  src="https://w.soundcloud.com/player/?
  url=https%3A//api.soundcloud.com/tracks/
  {#track_id}
  &amp;color=ff5500
  &amp;auto_play=false
  &amp;hide_related=false
  &amp;show_comments=true
  &amp;show_user=true
  &amp;show_reposts=false">
  </iframe>
<% else %>
  <iframe width="100%" height="450" scrolling="no" frameborder="no"
  src="https://w.soundcloud.com/player/?
  url=https%3A//api.soundcloud.com/tracks/
  {#track_id}
  &amp;color=ff5500
  &amp;auto_play=false
  &amp;hide_related=false
  &amp;show_comments=true
  &amp;show_user=true
  &amp;show_reposts=false
  &amp;visual=true">
  </iframe>
<% end %>

<% provide(:title, "profile: #{ @user.name }") %>
<section class="content-container row user-profile">

  <div class="page-header profile-header col-12">
    <div class="profile-username"><%= @user.username %></div>
  </div>

  <div class="profile-info col-xs-12 col-sm-4">
    <div class="profile-name"><%= @user.name %></div>
    <div class="profile-stats"><%= render "users/social/follow_stats" %></div>
    <%= render 'users/social/follow_options' if logged_in? %>
    <% if !@user.profile_bio.nil? %>
      <div class="profile-bio"><%= @user.profile_bio %></div>
    <% end %>
    <%= render 'users/menus/profile_menu' %>
  </div>


<div class="col-xs-12 col-sm-7 offset-sm-1">
  <% if @user.tracks.any? %>
    <ol>
      <%= render @tracks %>
    </ol>
    <%= will_paginate @tracks %>
  <% end %>
</div>

</section>
